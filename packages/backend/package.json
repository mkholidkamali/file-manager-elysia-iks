{
    "name": "explorer-backend",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun run src/app.ts",
        "build": "bun bunfig build",
        "start": "node dist/index.js",
        "migrate": "prisma migrate dev",
        "lint": "eslint 'src/**/*.{js,ts,vue}' --fix",
        "format": "prettier --write .",
        "check:format": "prettier --check .",
        "prisma:generate": "bunx prisma generate",
        "prisma:migrate": "bunx prisma migrate dev",
        "seed": "bunx prisma generate && bun prisma/seed.ts"
    },
    "dependencies": {
        "dotenv": "^17.2.3"
    },
    "devDependencies": {
        "@prisma/client": "^6.18.0",
        "prisma": "^6.18.0"
    }
}
