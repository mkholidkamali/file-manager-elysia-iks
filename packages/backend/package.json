{
    "name": "explorer-backend",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun --watch run src/server.ts",
        "build": "bun bunfig build",
        "start": "node dist/index.js",
        "migrate": "prisma migrate dev",
        "lint": "eslint 'src/**/*.{js,ts,vue}' --fix",
        "format": "prettier --write .",
        "check:format": "prettier --check .",
        "prisma:generate": "bunx prisma generate",
        "prisma:init": "bunx prisma generate && bunx prisma migrate dev && bun prisma/seed.ts",
        "prisma:migrate": "bunx prisma generate && bunx prisma migrate dev",
        "prisma:seed": "bunx prisma generate && bun prisma/seed.ts",
        "prisma:fresh": "bunx prisma migrate reset --force && bunx prisma generate && bunx prisma migrate dev && bun prisma/seed.ts",
        "test": "bun test"
    },
    "dependencies": {
        "@elysiajs/cors": "^1.4.0",
        "@elysiajs/swagger": "^1.3.1",
        "dotenv": "^17.2.3",
        "elysia": "^1.4.13"
    },
    "devDependencies": {
        "@prisma/client": "^6.18.0",
        "prisma": "^6.18.0"
    }
}
